# .env.example
# Arquivo-modelo de configuração: lista todas as variáveis de ambiente que a aplicação usa
# Copie para .env e ajuste com seus valores reais (nunca commite o .env)

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string para API NestJS
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tickets?schema=public"

# Configurações separadas para API Java (Spring Boot)
POSTGRES_DB=tickets
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/tickets
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# =============================================================================
# API NESTJS (Node.js)
# =============================================================================
PORT=3000
NODE_ENV=development
API_PREFIX=api
CORS_ORIGIN=http://localhost:3001

# JWT / Auth (se aplicável)
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=7d

# =============================================================================
# API JAVA (Spring Boot)
# =============================================================================
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_PROFILES_ACTIVE=dev
JAVA_OPTS="-XX:+UseContainerSupport -XX:MaxRAMPercentage=75"

# =============================================================================
# FRONTEND WEB (Next.js)
# =============================================================================
# URL da API backend (pública - exposta ao navegador)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Variáveis privadas do Next.js (server-side apenas)
NEXTAUTH_SECRET=change-me-in-production
NEXTAUTH_URL=http://localhost:3001

# =============================================================================
# DESENVOLVIMENTO
# =============================================================================
# Turbo
TURBO_TEAM=team_tickets
TURBO_TOKEN=

# pnpm
PNPM_VERSION=10.18

# Node
NODE_VERSION=22